@using System.Configuration
@model MultiChannelTodo.Front.Models.EnvModel

<div  role="main" ng-app="multiChannelToDo">

    <div class="jumbotron">
        <h1>
            <span class="glyphicon glyphicon-list-alt"></span> To Do List
        </h1>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div ng-controller="ToDoController">

                <img src="~/images/spinner.gif" class="spinner" ng-show="loading" />

                <div class="list-group">
                    <button class="list-group-item" id="list-group-item-{{item.Id}}" ng-repeat="item in items" ng-hide="{{item.Complete}}" ng-click="complete(item)">{{item.Text}}</button>
                </div>

                <form ng-submit="add()">
                    <div class="input-group">
                        <input id="Text" ng-model="itemText" type="text" class="form-control" placeholder="Task" /><span class="input-group-addon" id="basic-addon2">Add</span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Application Environment</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Application Base Path</td>
                        <td>@(Model.ApplicationEnvironment.ApplicationBasePath)</td>
                    </tr>
                    <tr>
                        <td>Application Name</td>
                        <td>@(Model.ApplicationEnvironment.ApplicationName)</td>
                    </tr>
                    <tr>
                        <td>Application Version</td>
                        <td>@(Model.ApplicationEnvironment.ApplicationVersion)</td>
                    </tr>
                    <tr>
                        <td>Configuration</td>
                        <td>@(Model.ApplicationEnvironment.Configuration)</td>
                    </tr>
                    <tr>
                        <td>Runtime Framework</td>
                        <td>@(Model.ApplicationEnvironment.RuntimeFramework.FullName)</td>
                    </tr>
                    <tr>
                        <td>Runtime Framework Version</td>
                        <td>@(Model.ApplicationEnvironment.RuntimeFramework.Version.ToString())</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Runtime Environment</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Operating System</td>
                        <td>@(Model.RuntimeEnvironment.OperatingSystem)</td>
                    </tr>
                    <tr>
                        <td>Operating System Version</td>
                        <td>@(Model.RuntimeEnvironment.OperatingSystemVersion)</td>
                    </tr>
                    <tr>
                        <td>Runtime Architecture</td>
                        <td>@(Model.RuntimeEnvironment.RuntimeArchitecture)</td>
                    </tr>
                    <tr>
                        <td>Runtime Path</td>
                        <td>@(Model.RuntimeEnvironment.RuntimePath)</td>
                    </tr>
                    <tr>
                        <td>Runtime Type</td>
                        <td>@(Model.RuntimeEnvironment.RuntimeType)</td>
                    </tr>
                    <tr>
                        <td>Runtime Version</td>
                        <td>@(Model.RuntimeEnvironment.RuntimeVersion)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Environment</h3>
        </div>
        <div class="panel-body">
            @Model.Options.Env
        </div>
    </div>

</div>
@section scripts
{
    <!-- AngularJS App -->
    <script type="text/javascript">
        var apiPath = "@Model.Options.ApiPath";
    </script>
    <script src="~/js/controllers/ToDoController.js" type="text/javascript"></script>
    <script src="~/js/services/ToDoService.js" type="text/javascript"></script>
}